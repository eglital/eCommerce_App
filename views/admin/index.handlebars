<div class="container">

<h2 class="text-center">Admin Orders Index Page</h2>
<br>
{{#if orders.length }}
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Description</th>
        <th>Checkout Date</th>
        <th>Revenue</th>
        <th>Customer Email</th>
        <th>Customer State</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders as |order| }}
        <tr>
          <td>
            <a href="/admin/{{ order.id }}">{{ order.id }}</a>
          </td>
          <td>
            <a href="/admin/{{ order.id }}">{{ order.description }}</a>
          </td>
          <td>
            <p>{{ formatDate order.createdAt }}</p>
          </td>
          <td>
            <p>{{ formatCurrency order.charge.amount }}</p>
          </td>
          <td>
            <p>{{ order.email }}</p>
          </td>
          <td>
            <p>{{ order.state }}</p>
          </td>
        </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No orders</p>
{{/if }}
</div>
